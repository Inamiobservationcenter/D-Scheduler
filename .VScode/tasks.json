{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build exe (PyInstaller)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& \"${workspaceFolder}\\.venv\\Scripts\\python.exe\" -m PyInstaller --onefile --noconsole --name D-Scheduler --icon \"${workspaceFolder}\\assets\\app.ico\" \"${workspaceFolder}\\d-scheduler.py\""
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
